## ANELLAS - LHUREN - CARAS VALA
entity = {
	name = "elven_01_molten_anellas"
	pdxmesh = "planet_clouded_mesh"
	
	meshsettings = {
		name = "planet_geosphereShape"
		texture_diffuse = "elven_organic_barren_01_anellas.dds"
		texture_normal = "elven_organic_barren_01_glow_normal.dds"
		texture_specular = "elven_organic_barren_01_specular.dds"
		shader = "PdxMeshPlanetEmissive"
	}
	
	##pole texture override
	meshsettings = {
		name = "polesShape"
		texture_diffuse = "elven_absolutely_no_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	
	##cloud texture override
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "elven_clouds_thin_dark_diffuse.dds"
		texture_normal = "clouds_thin_normal.dds"
		texture_specular = "clouds_thin_specular.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "clouds_thin_shadow_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	
	default_state = "idle"
	playback_rate = -1.0 # Rotation is reversed
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_molten_world_a" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_molten_world_b" } }
	}
}

